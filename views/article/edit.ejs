<%- include('../common/header.ejs')%>


<div class="container">
    <h1>文章编辑页</h1>
    <hr>
    <form id="form">
      <div class="form-group">
        <label>文章标题：</label>
        <input value="<%= articleInfo.title %>" type="text" name="title" class="form-control" required>
      </div>
  
      <div class="form-group">
        <label>文章内容：</label>
        <textarea name="content" class="form-control" id="editor">
            <%= articleInfo.content %>
        </textarea>
      </div>
  
      <div class="form-group">
        <input type="submit" value="发表文章" class="btn btn-primary">
      </div>
    </form>
  </div>

  <script>
  $(function(){
       //初始化文章部分的编辑器
        var mditor = Mditor.fromTextarea(document.getElementById('editor'));

   $('#form').on('submit',function(){
    $.ajax({
          url:'/article/edit/' + location.pathname.split('/').pop(),
          type:'post',
          data:$('#form').serialize(),
          success:function(res){
            alert(res.msg)
             if(res.status == 200) {
             location.href = '/article/info/'+location.pathname.split('/').pop()
            }
          },
          error: function (err) {
          alert(err.responseJSON.msg)
          if (err.responseJSON.status === 401) {
            let newWindow = window.open('about:blank')
            newWindow.location = '/login/reauth'
          }
        }
        })
        return false
   })
        
  })
  
  
  </script>

